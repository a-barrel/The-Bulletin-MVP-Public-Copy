{
  "name": "bulletintest",
  "version": "1.0.0",
  "description": "Social GPS application with React frontend and Node.js backend",
  "main": "index.js",
  "scripts": {
    "predev": "cd server && npm run seed",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"firebase emulators:start --import ./emulator-data\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "concurrently \"npm run server:start\" \"npm run client:preview\"",
    "server:start": "cd server && npm start",
    "client:preview": "cd client && npm run preview",
    "seed": "cd server && npm run seed",
    "seed:samples": "cd server && npm run seed:samples",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "social",
    "gps",
    "location",
    "react",
    "node"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "babel-jest": "^30.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "dependencies": {
    "react-icons": "^5.5.0"
  }
}
